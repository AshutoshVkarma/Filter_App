
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-4 offset-4">
        <div class="card">
            <div class="card-header">
                <h4>Sign In</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("SignIn", "Users"))
                {
                    <div class="form-group">
                        @ViewBag.Msg
                    </div>
                <div class="form-group">
                    <div class="input-group mb-3 input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control"
                               placeholder="Username" name="email">
                    </div>
                    <div class="input-group mb-3 input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-key"></i></span>
                        </div>
                        <input type="text" class="form-control"
                               placeholder="Username" name="Password">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="chk" /><span>Remember Me</span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-block btn-success form-control">SignIn</button>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Forget Password","ForgetPassword","Users")
                    </div>
                </div>
                }
            </div>
            
        </div>
    </div>
</div>

